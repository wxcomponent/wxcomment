.wxSearch{
  position: absolute;
  top: 100px;
  left: 0;
  margin-top: 30px;
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
  /* background-color: red; */
}
.wxSearchInner{
  background-color: #fff;
  /* margin: 5px; */
  /* background-color: darkblue; */
}
.wxSearch-section{
  background-color: #fff;
  height: 100px;
  /* background-color: fuchsia; */
  padding: 5px 10px;
  border: 1px #eee solid;
  width: 100%;
  /* height: 80px; */
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 10; 
  font-size: 30px;
  background-color: #eee;
  padding: 5px 10px;
}
.wxSearch-button{
  flex: 2;
  border: none !important;
  color: cornflowerblue !important;
}

.wxSearchTitle{
  display: block;
  padding: 10px 5px 5px 10px;
  /* font-size: 12px; */
  /* font-size: 25px; */
  font-size: 32px;
  text-align: center;
}


.wxSearchMindKeyItem{
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
  /* font-size: 14px; */
  font-size: 27px;
  color: cornflowerblue;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  /* font-size: 14px; */
  /* font-size: 28px; */
  font-size: 30px;
  text-align: center;
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px 10px;
  border-radius: 5px;
}
.wxSearchHistoryItem{
  padding: 10px 5px;
  border-bottom: 1px solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  /* font-size: 14px; */
  /* font-size: 28px; */
  font-size: 30px;
  vertical-align: middle;
  display: table-cell;
  /* color: red; */
}
.wxSearchHistoryItemDel{
  flex: 1;
  /* font-size: 28px; */
  font-size: 30px;
  /* font-size: 12px; */
  text-align: center;
  padding: 3px 5px;
  border: 1px solid #eee;
  height: 70px;
  line-height: 70px;
  border-radius: 5px;
  /* color: blue */
  vertical-align: middle;
  display: table-cell;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 50px;
  line-height: 50px;
  /* font-size: 12px; */
  /* font-size: 25px; */
  font-size: 30px;
}
.wxSearchDeleteAllBtn{
  height: 50px;
  line-height: 50px;
  text-align: center;
  /* font-size: 12px; */
  /* font-size: 25px; */
  font-size: 32px;
}